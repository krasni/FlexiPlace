@model ParametarViewModel

@{
    ViewBag.Title = "Promjena zahtjeva";
}

<form asp-controller="Administracija" asp-action="ParametriAplikacije" method="post" class="mt-3">
    <input hidden asp-for="Id" />

    <div class="form-group row">
        <label asp-for="DozvoljeniBrojDanaMjesec" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DozvoljeniBrojDanaMjesec" class="form-control" placeholder="DozvoljeniBrojDanaMjesecu">
            <span asp-validation-for="DozvoljeniBrojDanaMjesec" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DozvoljeniBrojDanaTjedan" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DozvoljeniBrojDanaTjedan" class="form-control" placeholder="DozvoljeniBrojDanaTjedan">
            <span asp-validation-for="DozvoljeniBrojDanaTjedan" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DozvoljeniBrojaDanaOdobrenje" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DozvoljeniBrojaDanaOdobrenje" class="form-control" placeholder="DozvoljeniBrojaDanaOdobrenje">
            <span asp-validation-for="DozvoljeniBrojaDanaOdobrenje" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Spremi</button>
            <a asp-controller="Zahtjev" asp-action="Index" class="btn btn-primary">Odustani</a>
        </div>
    </div>
</form>